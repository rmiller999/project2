<h1> Favorite Games</h1>
<hr>

  <% favorites.forEach(function(game){ %>
    <div id='favs'>
      <h3 id='fav'><%= game.name %></h3>
      <a href="/games/<%= game.gameId %>">View Details</a>
      <form action="/favorites/<%= game.gameId %>/?_method=PUT" method="POST">
        <label for="gamePlayed">Completed this game?:</label>
        <input type='checkbox' name='gamePlayed' <%= game.played ? "checked" : "" %> >
        <input type="submit" class='button'>
      </form>
      <form action="/favorites/<%= game.gameId %>/?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" class='button'>
      </form>
      
    </div>
	<% }); %>